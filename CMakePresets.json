{
    "version": 6,
    "configurePresets": [
        {
            "name": "hal-mc12101",
            "displayName": "Configure preset for board mc12101 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "HAL_MC12101_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "hal-mb7707",
            "displayName": "Configure preset for board mb7707 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "HAL_MB7707_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "hal-mc5103",
            "displayName": "Configure preset for board mc5103 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "HAL_MC5103_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "hal-mc7601",
            "displayName": "Configure preset for board mc7601 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "HAL_MC7601_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "hal-x64-ninja",
            "displayName": "Configure preset for virtual with ninja",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "HAL_VIRTUAL_BUILD": "ON"
            }
        },
        {
            "name": "hal-x64-windows-only",
            "displayName": "Configure preset for virtual with cl compiler",
            "description": "Sets cl compiler",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "set"
             },
            "cacheVariables": {
                "HAL_VIRTUAL_BUILD": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            },            
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
              }
        }        
    ],
    "buildPresets": [
        {
            "name": "hal-mc12101-release",
            "configurePreset": "hal-mc12101",
            "configuration": "Release",
            "displayName": "Release"
        },
        {
            "name": "hal-mc12101-debug",
            "configurePreset": "hal-mc12101",
            "configuration": "Debug",
            "displayName": "Debug"
        },        
        {
            "name": "hal-mb7707-release",
            "configurePreset": "hal-mb7707",
            "configuration": "Release",
            "displayName": "Release"
        },
        {
            "name": "hal-mb7707-debug",
            "configurePreset": "hal-mb7707",
            "configuration": "Debug",
            "displayName": "Debug"
        },
        {
            "name": "hal-mc5103-release",
            "configurePreset": "hal-mc5103",
            "configuration": "Release",
            "displayName": "Release"
        },
        {
            "name": "hal-mc5103-debug",
            "configurePreset": "hal-mc5103",
            "configuration": "Debug",
            "displayName": "Debug"
        },
        {
            "name": "hal-mc7601-release",
            "configurePreset": "hal-mc7601",
            "configuration": "Release",
            "displayName": "Release"
        },
        {
            "name": "hal-mc7601-debug",
            "configurePreset": "hal-mc7601",
            "configuration": "Debug",
            "displayName": "Debug"
        }

    ]
}