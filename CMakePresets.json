{
    "version": 6,
    "configurePresets": [
        {
            "name": "target-ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "hidden": true,
            "cacheVariables": {
                "HAL_TYPE": "TARGET",
                "CMAKE_BUILD_TYPE":"Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            },
            "environment": {
                "PATH":"$env{NMC_GCC_TOOLPATH}/nmc4-ide/bin;$env{NMC_GCC_TOOLPATH}/nmc4-ide/lib;$penv{PATH}",
                "GCC_EXEC_PREFIX":"/cygdrive/c/Program Files/Module/NMC-SDK/nmc4-ide/lib/gcc/"
            }
        },
        {
            "name": "host-msvc",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "set"
             },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "HAL_TYPE": "HOST",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "host-makefile",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Unix Makefiles",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "HAL_TYPE": "HOST"
            }
        },
        {
            "name": "hal-mc12101",
            "displayName": "hal-mc12101 target",
            "inherits": "target-ninja",
            "cacheVariables": {
                "HAL_MC12101": "ON"                
            }
        },
        {
            "name": "hal-mb7707",
            "displayName": "hal-mb7707 target",
            "inherits": "target-ninja",
            "cacheVariables": {
                "HAL_MB7707": "ON"
            }
        },
        {
            "name": "hal-mc5103",
            "displayName": "hal-mc5103 target",
            "inherits": "target-ninja",
            "cacheVariables": {
                "HAL_MC5103": "ON"
            }
        },
        {
            "name": "hal-mc7601",
            "displayName": "hal-mc7601 target",
            "inherits": "target-ninja",
            "cacheVariables": {
                "HAL_MC7601": "ON"
            }
        },
        {
            "name": "hal-mc12101-host-makefiles",
            "displayName": "hal-mc12101 host on makefiles",
            "inherits": "host-makefile",            
            "cacheVariables": {
                "HAL_MC12101": "ON"
            }
        },
        {
            "name": "hal-mb7707-host-makefiles",
            "displayName": "hal-mb7707 host on makefiles",
            "inherits": "host-makefile", 
            "cacheVariables": {
                "HAL_MB7707": "ON"
            }
        },
        {
            "name": "hal-mc5103-host-makefiles",
            "displayName": "hal-mc5103 host on makefiles",
            "inherits": "host-makefile", 
            "cacheVariables": {
                "HAL_MC5103": "ON"
            }
        },
        {
            "name": "hal-mc7601-host-makefiles",
            "displayName": "hal-mc7601 host on makefiles",
            "inherits": "host-makefile", 
            "cacheVariables": {
                "HAL_MC7601": "ON"
            }
        },
        {
            "name": "hal-mc12101-host-msvc",
            "displayName": "hal-mc12101 host on msvc",
            "inherits": "host-msvc", 
            "cacheVariables": {
                "HAL_MC12101": "ON"
            }
        },
        {
            "name": "hal-mb7707-host-msvc",
            "displayName": "hal-mb7707 host on msvc",
            "inherits": "host-msvc", 
            "cacheVariables": {
                "HAL_MB7707": "ON"
            }
        },
        {
            "name": "hal-mc5103-host-msvc",
            "displayName": "hal-mc5103 host on msvc",
            "inherits": "host-msvc", 
            "cacheVariables": {                
                "HAL_MC5103": "ON"
            }
        },
        {
            "name": "hal-mc7601-host-msvc",
            "displayName": "hal-mc7601 host on msvc",
            "inherits": "host-msvc", 
            "cacheVariables": {
                "HAL_MC7601": "ON"
            }
        },
        {
            "name": "hal-virtual-makefiles",
            "displayName": "hal-virtual on makefiles",
            "inherits": "host-makefile",
            "cacheVariables": {
                "HAL_TYPE": "VIRTUAL"
            }
        },
        {
            "name": "hal-virtual-msvc",
            "displayName": "hal-virtual on msvc",
            "inherits": "host-msvc", 
            "cacheVariables": {
